<%- include('../layout/header') %>
<% function formatDate(date) { %>
<%= ('0' + date.getDate()).slice(-2) %>/<%= ('0' + (date.getMonth() + 1)).slice(-2) %>/<%= date.getFullYear() %>
<% } %>

<% function formatDate1(date) { %>
<%= ('0' + date.getHours()).slice(-2) %>:<%= ('0' + date.getMinutes()).slice(-2) %>
<% } %>
<style>


      @font-face {
        font-family: 'Inter';
        src: url('Inter-Italic-VariableFont_opsz,wght.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
      }

      * {
        color: #15195A;
        margin: 0;
        font-size: 16px;
      }

      .ticket {
        margin: 0 auto;
        border-radius: 10px;
        box-sizing: border-box;
        padding: 25px 32px 25px 233px;
        height: 390px;
        width: 1000px;
        background: url('/uploads/events/<%= tickets[0].eventBackground %>') no-repeat;
        background-size: cover;
        background-position: center;
      }

      .ticket__content {
        position: relative;
      }

      .ticket__content .ticket__show-label {
        font-size: 12px;
        position: absolute;
        top: 35px;
      }

      .ticket__content .ticket__title {
        font-size: 29px;
        position: absolute;
        font-family: "Lobster", sans-serif;
        font-style: normal;
        top: 55px;
      }

      .left1 {
        left: 110px;
      }

      .left2 {
        left: 290px;
      }

      .left3 {
        right: 190px;
      }

      .top1 {
        top: 205px;
      }

      .top2 {
        top: 277px;
      }

      .ticket__info,.ticket__qr {
        position: absolute;
        font-family: 'Inter', sans-serif;
        font-weight: bolder;
        font-style: normal;
      }
      .ticket__qr{
        right: 32px;
        top: 32px;
      }
      .ticket__code{
        position: absolute;
        right: 32px;
        top: 141px;
        font-weight: bold;
      }

</style>


<div class="container section-title" data-aos="fade-up">
  <h1>Danh sách vé</h1>
</div>

<div class="container" data-aos="fade-up">
  <% if (tickets && tickets.length > 0) { %>
  <% tickets.forEach((ticket, index) => { %>

    <div class="ticket mb-3">
      <div class="ticket__content">
        <img class="ticket__logo" src="/assets/svg.svg" alt="Logo">
        <span class="ticket__show-label left1">Chương trình/Show</span>
        <p class="ticket__title left1 left1">Event Name <br>
          "Tinh hoa nghệ thuật Việt"</p>
          <p class="ticket__info left1 top1"><%= formatDate(new Date(ticket.eventDate)) %> </p>
          <p class="ticket__info left2 top1"><%= ticket.class_ticket %></p>
          <p class="ticket__info top1 left3"><%= formatDate1(new Date(ticket.eventDate)) %></p>
          <p class="ticket__info left2 top2"><%= ticket.type_ticket %></p>
          <p class="ticket__info left3 top2"> <%= ticket.seat%> </p>
          <img class="ticket__qr " width="100px" src="<%= qrCodes[index] %>" alt="Mã vé">
          <p class="ticket__code">  <%=ticket.code%> </p>
      </div>
    </div>
  <% })} %>
</div>
<%- include('../layout/footer') %>