<%- include('../../header') %>
<% function formatDate(date) { %>
<%= ('0' + date.getDate()).slice(-2) %>/
<%= ('0' + (date.getMonth() + 1)).slice(-2) %>/
<%= date.getFullYear() %>
<%= ('0' + date.getHours()).slice(-2) %>:
<%= ('0' + date.getMinutes()).slice(-2) %>:
<%= ('0' + date.getSeconds()).slice(-2) %>
<% } %>
<div class="page-title">
  <div class="heading"></div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Trang chủ</a></li>
        <li class="current">Sự kiện</li>
      </ol>
    </div>
  </nav>
</div>
<section id="starter-section" class="starter-section section">
  <div class="container section-title" data-aos="fade-up">
    <h1>Danh sách sự kiện</h1>
  </div>
  <div class="container mt-5">
    <a href="/event/add" class="btn btn-primary">Thêm sự kiện</a>
  </div>
  <div class="container" data-aos="fade-up">
    <table class="table table-bordered table-striped">
      <thead class="table">
        <tr>
          <th>ID</th>
          <th>Tên sự kiện</th>
          <th>Mô tả</th>
          <th>Thời gian bán</th>
          <th>Giờ bắt đầu</th>
          <th>Giờ kết thúc</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (envents && envents.length > 0) { %>
        <% envents.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= formatDate(item.sale_date) %></td>
          <td><%= formatDate(item.start_date) %></td>
          <td><%= formatDate(item.end_date) %></td>
          <td>
            <a href="/event/<%= item.id %>/edit" class="btn btn-primary">Sửa</a>
            <a href="/event/<%= item.id %>/detail" class="btn btn-danger">Xem</a>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="7" class="text-center text-danger">Không có sự kiện nào</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>
<script>
  document.querySelectorAll('.toggle-status').forEach(item => {
    item.addEventListener('change', async function() {
      const id = this.getAttribute('data-id');
      const newStatus = this.checked;
      // Gửi yêu cầu cập nhật trạng thái
      await fetch(`/language/changeStatus/${id}`, {
        method: 'GET'
      });
      console.log(`Cập nhật ID ${id} thành trạng thái: ${newStatus}`);
    });
  });
</script>

<%- include('../../footer') %>