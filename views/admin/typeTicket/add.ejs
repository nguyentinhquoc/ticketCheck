<%- include('../layout/header') %>

<section class="card p-4">
  <div class="container section-title" data-aos="fade-up">
    <h1>Thêm loại vé mới</h1>
  </div>
  <div class="container" data-aos="fade-up">
    <form action="/type-ticket/create" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Tên loại vé: </label>
        <input type="text"
               class="form-control"
               id="name"
               name="name"
               required>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Thêm mới</button>
        <a href="/type-ticket" class="btn btn-secondary">Hủy</a>
      </div>
    </form>
  </div>
</section>

<%- include('../layout/footer') %>
