<%- include('../../header') %>
<% function formatDate(date) { %>
<%= ('0' + date.getDate()).slice(-2) %>/
<%= ('0' + (date.getMonth() + 1)).slice(-2) %>/
<%= date.getFullYear() %>
<%= ('0' + date.getHours()).slice(-2) %>:
<%= ('0' + date.getMinutes()).slice(-2) %>:
<%= ('0' + date.getSeconds()).slice(-2) %>
<% } %>
<div class="page-title">
  <div class="heading"></div>
  <nav class="breadcrumbs">
    <div class="container">
      <ol>
        <li><a href="/">Trang chủ</a></li>
        <li class="current">Thư viện</li>
      </ol>
    </div>
  </nav>
</div>
<section id="starter-section" class="starter-section section">
  <div class="container section-title" data-aos="fade-up">
    <h1>Danh sách thư viện</h1>
  </div>
  <div class="container mt-5">
    <a href="/gallery/add" class="btn btn-primary">Thêm thư viện</a>
  </div>
  <div class="container" data-aos="fade-up">
    <table class="table table-bordered table-striped">
      <thead class="table">
        <tr>
          <th>ID</th>
          <th>Ảnh</th>
          <th>Tiêu đề</th>
          <th>Mô tả</th>
          <th>Ngày tạo</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (gallerys && gallerys.length > 0) { %>
        <% gallerys.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td> <img src="\uploads\gallery\<%= item.imagePath %>" alt="" width="100px"></td>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.createdAt ? formatDate(new Date(item.createdAt)) : 'N/A' %></td>
          <td>
            <a href="/gallery/<%= item.id %>/edit" class="btn btn-primary">Sửa</a>
            <a href="/gallery/<%= item.id %>/delete" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
          </td>
        </tr>
        <% }) %>
        <% } else { %>
        <tr>
          <td colspan="5" class="text-center text-danger">Không có thư viện nào</td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<%- include('../../footer') %>
